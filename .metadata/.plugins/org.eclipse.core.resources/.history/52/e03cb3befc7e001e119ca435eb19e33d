package gubing.servlet;

import java.io.IOException;
import java.sql.SQLException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.apache.commons.dbutils.QueryRunner;
import org.apache.commons.dbutils.handlers.BeanHandler;
import org.apache.commons.dbutils.handlers.ScalarHandler;

import gubing.dao.JDBCUtils;

/**
 * Servlet implementation class AddcjServletgb
 */
@WebServlet("/AddcjServletgb")
public class AddcjServletgb extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public AddcjServletgb() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String sno = request.getParameter("sno");
		String sname = request.getParameter("sname");
		String term = request.getParameter("term");
		String coursename = request.getParameter("coursename");
		String credit = request.getParameter("credit");
		String score = request.getParameter("score");
		
		if(sno==null || sname== null || term==null || coursename== null
				||credit==null ||score==null) {
			request.setAttribute("result", "插入失败");
			response.sendRedirect("/javaweb202158359066/indexgb.jsp");
		}
		String sql = "insert into score_info(sno,sname,term,coursename,credit,score) values(?,?,?,?,?,?)";
		QueryRunner query = new QueryRunner();
		try {
			Integer n = query.insert(JDBCUtils.getConnection(), sql, new ScalarHandler<Integer>(), sno,sname,term,coursename,credit,score);
			if(n>0) {
				request.setAttribute("result", "插入成功");
				response.sendRedirect("/javaweb202158359066/indexgb.jsp");
			}else {
				request.setAttribute("result", "插入失败");
				response.sendRedirect("/javaweb202158359066/indexgb.jsp");
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
		
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
